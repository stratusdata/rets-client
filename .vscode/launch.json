{
    "version": "0.2.0",
    "configurations": [
        {
          "name": "Current TS Tests File",
          "type": "node",
          "request": "launch",
          "program": "${workspaceRoot}/node_modules/.bin/_mocha",
          "args": [
            "-r", "ts-node/register",
            "-r", "source-map-support/register",
            "${relativeFile}"
          ],
          "cwd": "${workspaceRoot}",
          "protocol": "inspector"
        }
    ]
}